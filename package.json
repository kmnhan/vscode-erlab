{
  "name": "erlab",
  "displayName": "erlab",
  "version": "0.4.1",
  "publisher": "khan",
  "description": "Extension for working with xarray objects and the ERLab Python package in Jupyter Notebooks",
  "author": {
    "name": "Kimoon Higashihira Han"
  },
  "categories": [
    "Notebooks"
  ],
  "keywords": [
    "ARPES",
    "erlab",
    "erlabpy",
    "xarray"
  ],
  "icon": "images/icon.png",
  "pricing": "Free",
  "activationEvents": [
    "onLanguage:python"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-toolsai.jupyter"
  ],
  "contributes": {
    "commands": [
      {
        "command": "erlab.watch",
        "title": "erlab: Watch DataArray",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.itool",
        "title": "erlab: Open in ImageTool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.unwatch",
        "title": "erlab: Unwatch DataArray",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.isDataArrayWatched && erlab.hasErlab"
      },
      {
        "command": "erlab.ktool",
        "title": "erlab: Open in ktool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.dtool",
        "title": "erlab: Open in dtool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.restool",
        "title": "erlab: Open in restool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.meshtool",
        "title": "erlab: Open in meshtool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.ftool",
        "title": "erlab: Open in ftool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.goldtool",
        "title": "erlab: Open in goldtool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.otherTools",
        "title": "erlab: Other Tools...",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.refresh",
        "title": "erlab: Refresh xarray Objects",
        "icon": "$(refresh)",
        "when": "view == erlabXarrayObjects"
      },
      {
        "command": "erlab.xarray.filterTypes",
        "title": "erlab: Filter xarray Types",
        "icon": "$(filter)",
        "when": "view == erlabXarrayObjects"
      },
      {
        "command": "erlab.xarray.openDetail",
        "title": "erlab: Open xarray Details",
        "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem).*/"
      },
      {
        "command": "erlab.openDetail",
        "title": "erlab: Open xarray Details"
      },
      {
        "command": "erlab.xarray.togglePin",
        "title": "erlab: Toggle Pin",
        "icon": "$(pin)",
        "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem)Pinned.*/"
      },
      {
        "command": "erlab.xarray.pin",
        "title": "erlab: Pin",
        "icon": "$(pin)",
        "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem(Watched)?|datasetItem|datatreeItem)$/"
      },
      {
        "command": "erlab.xarray.unpin",
        "title": "erlab: Unpin",
        "icon": "$(pinned)",
        "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem)Pinned.*/"
      },
      {
        "command": "erlab.xarray.toggleWatch",
        "title": "erlab: Toggle DataArray Watch",
        "icon": "$(eye)",
        "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItemWatched.*/ && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.watch",
        "title": "erlab: Watch DataArray",
        "icon": "$(eye)",
        "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem(Pinned)?$/ && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.unwatch",
        "title": "erlab: Unwatch DataArray",
        "icon": "$(eye-closed)",
        "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem.*Watched.*/ && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.openInImageTool",
        "title": "erlab: Open DataArray in ImageTool",
        "icon": "$(empty-window)",
        "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem.*/ && erlab.hasErlab"
      },
      {
        "command": "erlab.xarray.goToDefinition",
        "title": "erlab: Go to Definition",
        "icon": "$(go-to-file)",
        "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem).*/"
      },
      {
        "command": "erlab.showOutput",
        "title": "erlab: Show Output Channel"
      }
    ],
    "configuration": {
      "title": "erlab",
      "properties": {
        "erlab.itool.useManager": {
          "type": "boolean",
          "default": true,
          "description": "Uses the ImageTool Manager to open ImageTool windows if it is available."
        },
        "erlab.xarray.displayExpandAttrs": {
          "type": "boolean",
          "default": true,
          "description": "Expand attributes section in xarray HTML representation."
        },
        "erlab.xarray.displayExpandCoords": {
          "type": "boolean",
          "default": true,
          "description": "Expand coordinates section in xarray HTML representation."
        },
        "erlab.xarray.displayExpandData": {
          "type": "boolean",
          "default": false,
          "description": "Expand data section in xarray HTML representation."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "erlab.xarray.openDetail",
          "when": "false"
        },
        {
          "command": "erlab.xarray.filterTypes",
          "when": "false"
        },
        {
          "command": "erlab.xarray.togglePin",
          "when": "false"
        },
        {
          "command": "erlab.xarray.pin",
          "when": "false"
        },
        {
          "command": "erlab.xarray.unpin",
          "when": "false"
        },
        {
          "command": "erlab.xarray.toggleWatch",
          "when": "false"
        },
        {
          "command": "erlab.xarray.watch",
          "when": "false"
        },
        {
          "command": "erlab.xarray.unwatch",
          "when": "false"
        },
        {
          "command": "erlab.xarray.openInImageTool",
          "when": "false"
        },
        {
          "command": "erlab.xarray.goToDefinition",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "erlab.watch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab",
          "group": "navigation"
        },
        {
          "command": "erlab.unwatch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.isDataArrayWatched && erlab.hasErlab",
          "group": "navigation"
        },
        {
          "command": "erlab.itool",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.hasErlab",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "erlab.xarray.refresh",
          "when": "view == erlabXarrayObjects",
          "group": "navigation@1"
        },
        {
          "command": "erlab.xarray.filterTypes",
          "when": "view == erlabXarrayObjects",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "erlab.xarray.openDetail",
          "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem).*/",
          "group": "navigation"
        },
        {
          "command": "erlab.xarray.openInImageTool",
          "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem.*/ && erlab.hasErlab",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.goToDefinition",
          "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem).*/",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.pin",
          "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem(Watched)?|datasetItem|datatreeItem)$/",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.unpin",
          "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem)Pinned.*/",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.watch",
          "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem(Pinned)?$/ && erlab.hasErlab",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.unwatch",
          "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItem.*Watched.*/ && erlab.hasErlab",
          "group": "inline"
        },
        {
          "command": "erlab.xarray.togglePin",
          "when": "view == erlabXarrayObjects && viewItem =~ /(dataArrayItem|datasetItem|datatreeItem)Pinned.*/",
          "group": "navigation"
        },
        {
          "command": "erlab.xarray.toggleWatch",
          "when": "view == erlabXarrayObjects && viewItem =~ /dataArrayItemWatched.*/ && erlab.hasErlab",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "erlab",
          "title": "erlab",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "erlab": [
        {
          "id": "erlabXarrayObjects",
          "name": "xarray Objects",
          "icon": "$(layers)"
        },
        {
          "id": "erlabXarrayDetail",
          "name": "xarray Detail",
          "type": "webview",
          "icon": "$(info)"
        }
      ]
    },
    "jupyterVariableViewers": [
      {
        "command": "erlab.openDetail",
        "title": "erlab: View xarray Details",
        "dataTypes": [
          "DataArray",
          "Dataset",
          "DataTree"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:with-jupyter": "vscode-test --install-extensions ms-toolsai.jupyter --install-extensions ms-python.python",
    "test:unit": "npm run compile && mocha --ui tdd out/test/unit/**/*.test.js",
    "test:e2e": "ERLAB_E2E=1 npm run test",
    "test:e2e:setup": "uv venv .venv-e2e --python 3.13 && uv pip install -r requirements-e2e.txt -p .venv-e2e",
    "test:e2e:cached": "ERLAB_E2E=1 ERLAB_E2E_VENV=.venv-e2e npm run test:with-jupyter",
    "version": "node scripts/update-changelog.js && git add CHANGELOG.md",
    "postversion": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "mocha": "^10.8.2",
    "ts-mockito": "^2.6.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/kmnhan/vscode-erlab/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmnhan/vscode-erlab.git"
  },
  "homepage": "https://github.com/kmnhan/vscode-erlab"
}

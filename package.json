{
  "name": "erlab",
  "displayName": "erlab",
  "version": "0.2.0",
  "publisher": "khan",
  "description": "Extension for working with xarray DataArrays and the ERLab Python package in Jupyter Notebooks",
  "author": {
    "name": "Kimoon Higashihira Han"
  },
  "categories": [
    "Notebooks"
  ],
  "keywords": [
    "ARPES",
    "erlab",
    "erlabpy"
  ],
  "icon": "images/icon.png",
  "pricing": "Free",
  "activationEvents": [
    "onLanguage:python"
  ],
  "engines": {
    "vscode": "^1.99.0"
  },
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-toolsai.jupyter"
  ],
  "contributes": {
    "commands": [
      {
        "command": "erlab.watch",
        "title": "erlab: Watch DataArray",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray"
      },
      {
        "command": "erlab.itool",
        "title": "erlab: Open in ImageTool",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray"
      },
      {
        "command": "erlab.unwatch",
        "title": "erlab: Unwatch DataArray",
        "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.isDataArrayWatched"
      },
      {
        "command": "erlab.dataArray.refresh",
        "title": "erlab: Refresh DataArrays",
        "icon": "$(refresh)",
        "when": "view == erlabDataArrays"
      },
      {
        "command": "erlab.dataArray.openDetail",
        "title": "erlab: Open DataArray Details",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/"
      },
      {
        "command": "erlab.dataArray.togglePin",
        "title": "erlab: Toggle DataArray Pin",
        "icon": "$(pin)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemPinned.*/"
      },
      {
        "command": "erlab.dataArray.pin",
        "title": "erlab: Pin DataArray",
        "icon": "$(pin)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem(Watched)?$/"
      },
      {
        "command": "erlab.dataArray.unpin",
        "title": "erlab: Unpin DataArray",
        "icon": "$(pinned)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemPinned.*/"
      },
      {
        "command": "erlab.dataArray.toggleWatch",
        "title": "erlab: Toggle DataArray Watch",
        "icon": "$(eye)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemWatched.*/"
      },
      {
        "command": "erlab.dataArray.watch",
        "title": "erlab: Watch DataArray",
        "icon": "$(eye)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem(Pinned)?$/"
      },
      {
        "command": "erlab.dataArray.unwatch",
        "title": "erlab: Unwatch DataArray",
        "icon": "$(eye-closed)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*Watched.*/"
      },
      {
        "command": "erlab.dataArray.openInImageTool",
        "title": "erlab: Open DataArray in ImageTool",
        "icon": "$(empty-window)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/"
      },
      {
        "command": "erlab.dataArray.goToDefinition",
        "title": "erlab: Go to DataArray Definition",
        "icon": "$(go-to-file)",
        "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/"
      }
    ],
    "configuration": {
      "title": "erlab",
      "properties": {
        "erlab.itool.useManager": {
          "type": "boolean",
          "default": true,
          "description": "Uses the ImageTool Manager to open ImageTool windows if it is available."
        },
        "erlab.dataArray.displayExpandAttrs": {
          "type": "boolean",
          "default": true,
          "description": "Expand attributes section in DataArray HTML representation."
        },
        "erlab.dataArray.displayExpandCoords": {
          "type": "boolean",
          "default": true,
          "description": "Expand coordinates section in DataArray HTML representation."
        },
        "erlab.dataArray.displayExpandData": {
          "type": "boolean",
          "default": false,
          "description": "Expand data section in DataArray HTML representation."
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "erlab.dataArray.openDetail",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.togglePin",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.pin",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.unpin",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.toggleWatch",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.watch",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.unwatch",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.openInImageTool",
          "when": "false"
        },
        {
          "command": "erlab.dataArray.goToDefinition",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "erlab.watch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray",
          "group": "navigation"
        },
        {
          "command": "erlab.unwatch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.isDataArrayWatched",
          "group": "navigation"
        },
        {
          "command": "erlab.itool",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "erlab.dataArray.refresh",
          "when": "view == erlabDataArrays",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "erlab.dataArray.openDetail",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/",
          "group": "navigation"
        },
        {
          "command": "erlab.dataArray.openInImageTool",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.goToDefinition",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.pin",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem(Watched)?$/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.unpin",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemPinned.*/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.watch",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem(Pinned)?$/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.unwatch",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItem.*Watched.*/",
          "group": "inline"
        },
        {
          "command": "erlab.dataArray.togglePin",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemPinned.*/",
          "group": "navigation"
        },
        {
          "command": "erlab.dataArray.toggleWatch",
          "when": "view == erlabDataArrays && viewItem =~ /dataArrayItemWatched.*/",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "panel": [
        {
          "id": "erlab",
          "title": "erlab",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "erlab": [
        {
          "id": "erlabDataArrays",
          "name": "DataArrays",
          "icon": "$(layers)"
        },
        {
          "id": "erlabDataArrayDetail",
          "name": "DataArray Detail",
          "type": "webview",
          "icon": "$(info)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "npm run compile && mocha --ui tdd out/test/unit/**/*.test.js",
    "test:e2e": "ERLAB_E2E=1 npm run test",
    "test:e2e:setup": "uv venv .venv-e2e --python 3.13 && uv pip install -r requirements-e2e.txt -p .venv-e2e",
    "test:e2e:cached": "ERLAB_E2E=1 ERLAB_E2E_VENV=.venv-e2e npm run test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "mocha": "^10.8.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/kmnhan/vscode-erlab/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmnhan/vscode-erlab.git"
  },
  "homepage": "https://github.com/kmnhan/vscode-erlab"
}

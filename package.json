{
  "name": "erlab",
  "displayName": "erlab",
  "version": "0.0.1",
  "publisher": "khan",
  "description": "Extension for working with xarray DataArrays and the ERLab Python package in Jupyter Notebooks",
  "author": {
    "name": "Kimoon Higashihira Han"
  },
  "categories": [
    "Notebooks"
  ],
  "keywords": [
    "ARPES",
    "erlab",
    "erlabpy"
  ],
  "icon": "images/icon.png",
  "pricing": "Free",
  "activationEvents": [
    "onLanguage:python"
  ],
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./out/extension.js",
  "extensionDependencies": [
    "ms-toolsai.jupyter"
  ],
  "contributes": {
    "commands": [
      {
        "command": "erlab.watch",
        "title": "erlab: Watch DataArray"
      },
      {
        "command": "erlab.manager",
        "title": "erlab: Show in ImageTool Manager"
      },
      {
        "command": "erlab.unwatch",
        "title": "erlab: Unwatch DataArray"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "erlab.watch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray",
          "group": "navigation"
        },
        {
          "command": "erlab.unwatch",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray && erlab.isDataArrayWatched",
          "group": "navigation"
        },
        {
          "command": "erlab.manager",
          "when": "resourceExtname == .ipynb && editorLangId == python && erlab.isDataArray",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/kmnhan/vscode-erlab/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kmnhan/vscode-erlab.git"
  },
  "homepage": "https://github.com/kmnhan/vscode-erlab"
}
